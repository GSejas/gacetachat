{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${file}",
                "--server.port",
                "8512"
            ]
        },
        {
            "name": "Multi Page Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/streamlit_app.py",
                "--server.port",
                "8513"
            ]
        },
        {
            "name": "Python Debugger: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Pyt Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "FastAPI: App",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "fastapp:app",
                "--reload",
                "--port",
                "8050"
            ],
            "jinja": true,
            "justMyCode": false,
        }
    ]
}